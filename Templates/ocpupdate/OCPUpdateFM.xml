<?xml version="1.0" encoding="utf-8"?>
<FeatureManifest
    xmlns="http://schemas.microsoft.com/embedded/2004/10/ImageUpdate"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
>
  <BasePackages>
    <PackageFile Path="%PKGBLD_DIR%" Name="%OEM_NAME%.OCPUpdate.DeviceTargetingData.cab"/>
  </BasePackages>

  <Features>
    <Microsoft />
    <MSFeatureGroups />
    <OEM>
      <PackageFile Path="%PKGBLD_DIR%" Name="%OEM_NAME%.OCPUpdate.DeviceTargetingRing.cab" >
        <FeatureIDs>
          <FeatureID>OCP_TARGET_RING</FeatureID>
        </FeatureIDs>
      </PackageFile>
    </OEM>
    <OEMFeatureGroups>
        <FeatureGroup Constraint="OneAndOnlyOne">
            <FeatureIDs>
                <FeatureID>OEM_OCP_TARGET_RING</FeatureID>
                <FeatureID>MS_IOT_DEFAULT_POP</FeatureID>
            </FeatureIDs>
        </FeatureGroup>
    </OEMFeatureGroups>
    <OEMConditionalFeatures>
      <ConditionalFeature FeatureID="OEM_OCP_TARGET_RING" UpdateAction="NoUpdate" />
    </OEMConditionalFeatures>
  </Features>
</FeatureManifest>
